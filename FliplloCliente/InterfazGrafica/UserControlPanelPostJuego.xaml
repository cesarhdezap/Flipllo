             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfazGrafica"
             mc:Ignorable="d" 
             d:DesignHeight="512" d:DesignWidth="512" Background="#FF03683A">
    <Grid>
        <Label Name="LabelMensajeDeVictoria" Content="MensajeDeVictoria" HorizontalAlignment="Left" Margin="43,48,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label Name="LabelNombreDeUsuarioOponente" Content="Oponente" HorizontalAlignment="Left" Margin="-286,122,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Name="LabelMiNombreDeUsuario" Content="Yo" HorizontalAlignment="Left" Margin="-517,122,0,0" VerticalAlignment="Top" FontSize="24"/>
